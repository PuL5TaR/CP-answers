// Language -> C++
// site -> leetcode.com
// problemName -> Two Sum

class Solution
{
public:
    vector<int> twoSum(vector<int> &nums, int target)
    {
        vector<int> result;
        unordered_map<int, int> numMap;

        for (int i = 0; i < nums.size(); i++)
        {
            int rem = target - nums[i];
            if(numMap.find(rem) != numMap.end()){
                result.push_back(numMap[rem]);
                result.push_back(i);
                return result;
            }
            numMap[nums[i]] = i;
        }

        return result;
    }
};
